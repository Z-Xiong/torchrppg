{
    "name": "RPPG_PhysTransformer_UBFC_PhysFormerLoss",
    "n_gpu": 1,

    "arch": {
        "type": "ViT_ST_ST_Compact3_TDC_gra_sharp",
        "args": {
            "dim": 96,
            "ff_dim": 144,
            "num_heads": 4,
            "num_layers": 12,
            "dropout_rate": 0.1,
            "theta": 0.7
        }
    },
    "train_dataloader": {
        "type": "UBFCDataloader",
        "args":{
            "data_dir": "/media/pxierra/4ddb33c4-42d9-4544-b7b4-796994f061ce/data/pluse/UBFC/TDM_rppg_input/DATASET_2_PTH/train",
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 4,
            "drop_last": true
        }
    },
    "val_dataloader": {
        "type": "UBFCDataloader",
        "args":{
            "data_dir": "/media/pxierra/4ddb33c4-42d9-4544-b7b4-796994f061ce/data/pluse/UBFC/TDM_rppg_input/DATASET_2_PTH/val",
            "batch_size": 1,
            "shuffle": true,
            "num_workers": 4,
            "drop_last": true
        }
    },
    "optimizer1": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "optimizer2": {
        "type": "Adam",
        "args":{
            "lr": 1,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "PhysFormerLoss",
        "args": {
            "subject_number": 10
        }
    },
    "metrics": [],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 200,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,

        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    }
}
